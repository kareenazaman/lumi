<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_complain_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F6F5">

    <!-- Header image (optional) -->
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_dashboard_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Back -->
    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="68dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_btn" />

    <!-- Card form -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/complaints_form"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="18dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_btn">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title: Complain #ABC123 -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Complain #—"
                    android:textColor="#2D3A36"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <!-- Created by -->
                <TextView
                    android:id="@+id/tvCreatedByLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created by:"
                    android:textColor="#7A8B86"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvCreatedBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:text="—"
                    android:textColor="#12342E"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5ECEA" />

                <!-- Room # (chip style) -->
                <TextView
                    android:id="@+id/tvRoomLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:text="Room #:"
                    android:textColor="#7A8B86"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvRoomChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_chip_dark"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="6dp"
                    android:text="—"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="#E5ECEA" />

                <!-- Property selector / text -->
                <TextView
                    android:id="@+id/tvPropertyLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:text="Property:"
                    android:textColor="#7A8B86"
                    android:textSize="16sp" />

                <!-- For Renters: address text -->
                <TextView
                    android:id="@+id/tvPropertyAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:text="—"
                    android:textColor="#12342E"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <!-- For PM: dropdown -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilProperty"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select property"
                    android:visibility="gone">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/actProperty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="#E5ECEA" />

                <!-- Date created -->
                <TextView
                    android:id="@+id/tvDateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:text="Date created:"
                    android:textColor="#7A8B86"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:text="—"
                    android:textColor="#12342E"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5ECEA" />

                <!-- Description -->
                <TextView
                    android:id="@+id/tvDescLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:text="Description:"
                    android:textColor="#7A8B86"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilDesc"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Describe the issue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDesc"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:maxLength="1500"
                        android:overScrollMode="ifContentScrolls"
                        android:scrollbars="vertical" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Submit -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCreateComplaint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Create Complaint"
                    app:icon="@drawable/plus_solid"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white" />
            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
