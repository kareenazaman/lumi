<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:padding="0dp"
    tools:context=".activity_role_select">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <!-- Top Space -->
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <!-- Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/role_select_title"
                    android:textColor="#0B3327"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp" />

                <!-- Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/role_select_description"
                    android:textColor="#6E7B78"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp" />

                <!-- Role Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Renter Option -->
                    <LinearLayout
                        android:id="@+id/renterLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/renterRoleBTN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/role_gradient_bg"
                            android:padding="24dp"
                            app:srcCompat="@drawable/users_group_solid" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/renter_label"
                            android:textAlignment="center"
                            android:textColor="#0B3327"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Manager Option -->
                    <LinearLayout
                        android:id="@+id/managerLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/managerRoleBTN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/role_gradient_bg"
                            android:padding="24dp"
                            app:srcCompat="@drawable/manager_solid" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/manager_label"
                            android:textAlignment="center"
                            android:textColor="#0B3327"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Continue Button -->
                <Button
                    android:id="@+id/roleSubmitBTN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="Continue â†’"
                    android:textColor="#02332E"
                    android:textStyle="bold" />

                <!-- Bottom Space -->
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />
            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
